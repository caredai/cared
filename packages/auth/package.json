{
  "name": "@cared/auth",
  "private": true,
  "version": "0.1.6",
  "type": "module",
  "exports": {
    ".": "./src/index.tsx",
    "./server": "./src/server.tsx",
    "./client": "./src/client.ts"
  },
  "license": "MIT",
  "scripts": {
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --",
    "generate-schema": "pnpm with-env pnpm dlx @better-auth/cli generate -y --config ./src/server.tsx --output ../db/src/generated/auth.ts && pnpm prettier --check --write ../db/src/generated/auth.ts"
  },
  "devDependencies": {
    "@cared/eslint-config": "workspace:*",
    "@cared/prettier-config": "workspace:*",
    "@cared/tsconfig": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@cared/prettier-config",
  "dependencies": {
    "@better-auth/utils": "^0.3.0",
    "@cared/db": "workspace:*",
    "@cared/email": "workspace:*",
    "@cared/kv": "workspace:*",
    "@cared/log": "workspace:*",
    "@cared/shared": "workspace:*",
    "better-auth": "1.3.12",
    "better-auth-harmony": "^1.2.5",
    "validation-better-auth": "^1.3.4"
  }
}
